%h2= t('devise.passwords.new.header', :default => "Forgot your password?")
= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :email
  = f.buttons do
    = f.commit_button :label => t('devise.passwords.new.submit', :default => "Send me reset password instructions")
= render :partial => "devise/shared/links"