%h2= t('devise.passwords.edit.header', :default => "Change your password")
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  %p
    = f.label :password, t('devise.passwords.edit.password', :default => "New Password")
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation, t('devise.passwords.edit.password_confirmation', :default => "Password Confirmation")
    %br/
    = f.password_field :password_confirmation
  %p= f.submit t('devise.passwords.edit.submit', :default => "Change my password")
= render :partial => "devise/shared/links"