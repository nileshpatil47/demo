%h2= t('sessions.new.header', :default => 'Sign In')

= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |form|
  = form.inputs do
    = form.input :email, :as => :email
    = form.input :password
    - if devise_mapping.rememberable?
      = form.input :remember_me, :as => :check_boxes, :collection => [t('sessions.form.remember_me', :default => "Remember me")], :label => false
  = form.buttons do
    = form.commit_button

= render :partial => "devise/shared/links"