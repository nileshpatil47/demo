%h2= t('devise.registrations.edit.header', :default => "Edit", :resource => resource_name.to_s.humanize)

= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  = f.inputs do
    = f.input :email
    = f.input :password, :hint => "leave blank if you don't want to change it"
    = f.input :password_confirmation, :as => :password
    = f.input :current_password, :hint => "we need your current password to confirm your changes"
  = f.buttons
    = f.commit_button "Update"

%h3= t('devise.registrations.edit.cancel.header', :default => "Cancel my account")
%p
  = t('devise.registrations.edit.cancel.unhappy', :default => "Unhappy?")
  = link_to t('devise.registrations.edit.cancel.link', :default => "Cancel my account"), registration_path(resource_name), :confirm => "Are you sure?", :method => :delete
= link_to t('devise.registrations.edit.back', :default => "Back"), :back
